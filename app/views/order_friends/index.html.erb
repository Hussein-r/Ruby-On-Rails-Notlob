<p id="notice"><%= notice %></p>

<h1>Order Friends</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_friends.each do |order_friend| %>
      <tr>
        <td><%= order_friend.order_id %></td>
        <td><%= order_friend.user_id %></td>
        <td><%= link_to 'Show', order_friend %></td>
        <td><%= link_to 'Edit', edit_order_friend_path(order_friend) %></td>
        <td><%= link_to 'Destroy', order_friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

