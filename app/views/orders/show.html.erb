
<div class="h3" style="background-color:lightskyblue;color:white">
  <p style="display:inline-block;margin-left:15%"><%= link_to 'Back', orders_path ,:style=>'color: white;'%></p>
  <p style="display:inline-block;margin-left:45%"><%= link_to 'Edit', edit_order_path(@order) ,:style=>'color: white;'%></p>
</div>
<!DOCTYPE html>
  <html lang="en">

  <head>
      <!-- Title Page-->
      <title>Order Details</title>
      <%= stylesheet_link_tag "main" %>
  </head>

  <body>
    <div class="page-wrapper bg-red p-t-180 p-b-100 font-robo">
      <div class="wrapper wrapper--w960">
        <div class="card card-2">
          <div class="card-heading"></div>
            <div class="card-body">
              <h2 class="title">Order Details</h2>
                <div class="input-group mb-3">
                  <p>Order For:</p>
                  <%= @order.order_type %>
                </div>
                <div class="input-group mb-3">
                  <p>Restaurant:</p>
                  <%= @order.restaurant %>
                </div>
                <div class="input-group mb-3">
                  <p>Friends:</p>
                  <%= @order.order_friends %>
                </div>
                <div class="input-group mb-3">
                  <p>Menu Image:</p>
                  <%= image_tag(@order.picture,:class => "image",style: 'width:300px;height:200px') if @order.picture.attached? %>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

